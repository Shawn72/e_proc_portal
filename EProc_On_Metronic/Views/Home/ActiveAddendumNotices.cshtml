@{
    Layout = "~/Views/Shared/_Formwizard_Layout.cshtml";
}
<!-- BEGIN PAGE TITLE-->
<div class="page-content" style="min-height: 900px!important">
    <!-- BEGIN PAGE BAR -->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="/Home/ActiveAddendumNotices">e-Bidding</a>
                <i class="fa fa-circle"></i>
            </li>
            <li><span>Tender Addendum Notices</span></li>
        </ul>
        
    </div>
    <!-- END PAGE BAR -->

    <h3 class="page-title"><strong>Active Addendum Notices</strong>
    </h3>
    <!-- END PAGE TITLE-->

    <!-- START: Active Tender Invitations-->

    <div class="caption">
        <i class="icon-settings font-green"></i>
        <span class="caption-subject font-green sbold uppercase">Addendum Notices</span>
    </div>
    <p>
        The latest tender addendum notices, issued by the Procuring Entity, are listed here
    </p>
    
    <div id="addedum_show_list">
        <table class="table table-striped table-bordered table-hover table-responsive" id="tbl_addendum_list">
            <thead>
            <tr>
                <th>Addendum Notice No</th>
                <th>Document Date</th>
                <th>Invitation Notice No </th>
                <th>Description</th>
                <th>Tender Description</th>
                <th>Responsibilty Center</th>
            </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <div id="addendum_details" style="display: none">
        <div class="scroll">
            @Html.Action("AddendumDetailsInject", "Home")
        </div>
    </div>

    <div class="form-actions">
        <div class="row">
            <div class="col-md-offset-5 col-md-8">
                <a href="javascript:;" class="btn green btn-outline btn-circle btn_back_2_addendumlist"><i class="fas fa fa-angle-left"></i> &nbsp;Backwards </a>
               
            </div>
        </div>
    </div>


    <!---START: Tender Details per ITT No-->

    <!-- END: Active Tender Invitations-->

    <div class="modalspinner" style="display: none">
        <div class="centerspinner">
            <img alt="" src="/assets/loaders/spinner.gif"/>
        </div>
    </div>
</div>
<!-- END CONTENT BODY -->