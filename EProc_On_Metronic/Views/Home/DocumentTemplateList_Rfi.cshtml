@model IEnumerable<EProc_On_Metronic.Models.DocumentsTModel>

@{
    Layout = null;
    var sno = 0;
}
@if (!Model.Any())
{
    <div class="alert alert-danger">
        <h3 style="color: red">
            Kindly contact the office to advise you what document to upload
        </h3>
    </div>
}
else
{
    <table class="table table-striped table-hover table-bordered" id="tbl_mandatory_docs_rfiapp">
        <thead>
        <tr>
            <th>#</th>
            <th>Doc ID</th>
            <th>Description</th>
            <th>Requirement Type</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            sno++;
            <tr>
                <td>@sno</td>
                <td>@item.Procurement_Document_Type_ID</td>
                <td>@item.Description</td>
                <td>@item.Requirement_Type</td>
            </tr>
        }
        </tbody>
    </table>
}
