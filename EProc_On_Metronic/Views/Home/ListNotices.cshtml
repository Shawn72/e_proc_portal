@model IEnumerable<EProc_On_Metronic.Models.TenderModel>

@{
    Layout = null;
}
@if (!Model.Any())
{
    <div class="alert alert-danger">No Ads or notices for now! check out later!</div>
}
else
{
    foreach (var item in Model)
    {
        <li>
            <a href="javascript:;">
                <span class="time">3 mins ago</span>
                <span class="details">
                    <span class="label label-sm label-icon label-info">
                        <i class="fa fa-bolt"></i>
                    </span> @item.Advert_Description </span>
            </a>
        </li>
    }
    
}
