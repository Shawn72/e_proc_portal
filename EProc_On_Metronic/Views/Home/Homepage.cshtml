@model IEnumerable<EProc_On_Metronic.Models.TenderModel>
@{
    ViewBag.Title = "Homepage";
    Layout = "~/Views/Shared/_Homepage_Layout.cshtml";
    var sno = 0;
}

<!-- BEGIN CONTENT BODY -->
<div class="page-content">
    <!-- BEGIN PAGE HEADER-->
 
    <!-- BEGIN PAGE BAR -->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="/Home/Homepage">Home</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>Open Tenders</span>
            </li>
        </ul>
        
    </div>
    <!-- END PAGE BAR -->

    <!-- BEGIN PAGE TITLE-->
    <h1 class="page-title"> List of open tenders for public applications</h1>
    <!-- END PAGE TITLE-->

    @*<div class="note note-info">
        <p> Full width & fluid layout with horizontal mega menu. </p>
    </div>*@
    <div class="page-content">
      <!--  do table things here-->
    <div class="row">
    <div class="col-md-12">
    <!-- Begin: life time stats -->
    <div class="portlet light portlet-fit portlet-datatable bordered">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-settings font-green"></i>
            <span class="caption-subject font-green sbold uppercase">Open Tenders</span>
        </div>
        <div class="actions">
            <div class="btn-group">
                <a class="btn red btn-outline btn-circle" href="javascript:;" data-toggle="dropdown">
                    <i class="fa fa-share"></i>
                    <span class="hidden-xs"> Trigger Tools </span>
                    <i class="fa fa-angle-down"></i>
                </a>
                <ul class="dropdown-menu pull-right" id="sample_3_tools">
                    <li>
                        <a href="javascript:;" data-action="0" class="tool-action">
                            <i class="icon-printer"></i> Print</a>
                    </li>
                    <li>
                        <a href="javascript:;" data-action="1" class="tool-action">
                            <i class="far fa-copy"></i> Copy</a>
                    </li>
                    <li>
                        <a href="javascript:;" data-action="2" class="tool-action">
                            <i class="far fa-file-pdf"></i> PDF</a>
                    </li>
                    <li>
                        <a href="javascript:;" data-action="3" class="tool-action">
                            <i class="far fa-file-excel"></i> Excel</a>
                    </li>
                    @*<li>
                        <a href="javascript:;" data-action="5" class="tool-action">
                            <i class="icon-refresh"></i> Reload</a>
                    </li>*@
                </ul>
            </div>
        </div>
    </div>
    <div class="portlet-body">
    <div class="table-container">
        <div id="openTenderId" style="display: none;"></div>
        @if (!Model.Any())
        {
            <div class="alert alert-danger">There are no Tenders open to the public yet, kindly check again later</div>
        }
        else
        {
            <table class="table table-striped table-bordered table-hover" id="sample_3">
            <thead>
            <tr>
                <th>#</th>
                <th>No.</th>
                <th>Description</th>
                <th>Deadline Date</th>
                <th>Actions</th>
            </tr>
            </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    sno++;
                    <tr>
                        <td>
                            @sno
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.External_Document_No)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tender_Summary)
                        </td>
                        <td>
                            @Convert.ToDateTime(item.Submission_Start_Date).ToShortDateString()
                        </td>
                        <td class="text-right">
                            <button type="submit" class="btn green btn-outline btn-circle btnDownloadTender" tenderNo='@item.External_Document_No'><i class="fas fa-cloud-download-alt downloadtenderfavicon"></i> Download </button>
                            <span class="btn blue btn-outline btn-circle">
                                <a href="/Home/Login_EBid" style="background: none; border: 0"><i class="far fa-edit m-r-5"></i> Go to Apply</a>
                            </span>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        } </div>
    </div>
    </div>
    <!-- End: life time stats -->
    </div>
    </div>
    </div>

</div>
<!-- END CONTENT BODY -->



