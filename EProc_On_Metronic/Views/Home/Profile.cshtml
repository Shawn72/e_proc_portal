@model IEnumerable<EProc_On_Metronic.Models.ProfileModel>
@{
    Layout = null;
    //var contNo = (string)Session["userNo"];
    //if (contNo.Contains(":"))
    //{
    //    contNo = contNo.Replace(":", "_");
    //}
    var contNo = (string)Session["contactNo"];
    if (contNo.Contains(":"))
    {
        contNo = contNo.Replace(":", "_");
    }
}

<div class="row clearfix">
@if (!Model.Any())
{
    <div class="alert alert-danger">You have to <a href="/Home/Homepage">login</a> first
    </div>
}
else
{
    foreach (var item in Model)
    {
        <div class="col-xs-12 col-sm-3">
            <div id="profilefeedback" style="display: none"></div>
            <div class="card profile-card">

                <div class="profile-header">&nbsp;</div>
                <div class="profile-body">
                    <div class="image-area">
                        <img src="/Profiles/@contNo/profpic.png" alt="Dynasoft- Profile Image" style="height: 135px; width: 135px;" onerror="this.onerror = null;this.src = '/assets/icons/andre@2020.jpg';"/>
                    </div>
                    <div class="content-area">
                        <h3>@item.Name</h3>
                    </div>
                </div>
                <div class="profile-footer">
                    <form enctype="multipart/form-data" id="img_form" method="post">
                        <input type="file" accept="image/*" id="inputPhoto" name="inputPhoto" style="display: none"/>
                        <span class="btn btn-sm btn-block btn-success">
                            <i class="ace-icon fa fa-camera bigger-120"></i>&nbsp; <button id="btnPullphoto" style="background: none; border: 0">Change Photo</button>
                        </span>
                    </form>
                </div>
            </div>
            <div class="card card-about-me">
                <div class="header">
                    <h2>ABOUT ME</h2>
                </div>
                <div class="body">
                    <ul>
                        <li>
                            <div class="title">
                                <i class="material-icons">email</i>
                                Email
                            </div>
                            <div class="content">
                                @item.E_Mail
                            </div>
                        </li>
                        <li>
                            <div class="title">
                                <i class="fas fa-key material-icons"></i>
                                I.D Number
                            </div>
                            <i class=""></i>
                            <div class="content">
                                @item.ID_Number
                            </div>
                        </li>
                        <li>
                            <div class="title">
                                <i class="material-icons">location_on</i>
                                Address
                            </div>
                            <div class="content">
                                @item.Address - @item.Post_Code, @item.City
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-9">
        <div class="card">
        <div class="body">
        <div>
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Home</a></li>
            <li role="presentation"><a href="#account_settings" aria-controls="settings" role="tab" data-toggle="tab">Account Information</a></li>
            <li role="presentation"><a href="#profile_settings" aria-controls="settings" role="tab" data-toggle="tab">Profile Settings</a></li>
            <li role="presentation"><a href="#change_password_settings" aria-controls="settings" role="tab" data-toggle="tab">Change Password</a></li>
        </ul>
        <div class="tab-content">
        <div role="tabpanel" class="tab-pane fade in active" id="home">
            <div class="panel panel-default panel-post">
                <div class="panel-heading">
                    <div class="media">
                        <div class="media-left">
                            <a href="#">
                                <img src="/Profiles/@contNo/profpic.png" alt="Dynasoft- Profile Image" style="height: 40px; width: 40px;" onerror="this.onerror = null;this.src = '/assets/icons/andre@2020.jpg';"/>
                            </a>
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading">
                                <a href="#">Shawn Andre</a>
                            </h4>
                            Shared publicly - 26 Oct 2018
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="post">
                        <div class="post-heading">
                            <p>Test header for FAQs</p>
                        </div>
                        <div class="post-content">
                            <p>This is a dummy content for FAQs, Live system will pull comments and replies from the database.</p>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <ul>
                        <li>
                            <a href="#">
                                <i class="material-icons">thumb_up</i>
                                <span>12 Likes</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="material-icons">comment</i>
                                <span>5 Comments</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="material-icons">share</i>
                                <span>Share</span>
                            </a>
                        </li>
                    </ul>
                    <div class="form-group">
                        <div class="form-line">
                            <input type="text" class="form-control" placeholder="Type a comment"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default panel-post">
                <div class="panel-heading">
                    <div class="media">
                        <div class="media-left">
                            <a href="#">
                                <img src="/Profiles/@contNo/profpic.png" alt="Dynasoft- Profile Image" style="height: 40px; width: 40px;" onerror="this.onerror = null;this.src = '/assets/icons/andre@2020.jpg';" />
                            </a>
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading">
                                <a href="#">Shawn Andre</a>
                            </h4>
                            Shared publicly - 01 Oct 2018
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="post">
                        <div class="post-heading">
                            <p>Test heading for FAQS.</p>
                        </div>
                        <div class="post-content">
                           <p>Placeholder for FAQs, questions and comments.</p>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <ul>
                        <li>
                            <a href="#">
                                <i class="material-icons">thumb_up</i>
                                <span>125 Likes</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="material-icons">comment</i>
                                <span>8 Comments</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="material-icons">share</i>
                                <span>Share</span>
                            </a>
                        </li>
                    </ul>
                    <div class="form-group">
                        <div class="form-line">
                            <input type="text" class="form-control" placeholder="Type a comment"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div role="tabpanel" class="tab-pane fade in" id="account_settings">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="txtContNo" class="col-sm-2 control-label">Contact RefNo:</label>
                    <div class="col-sm-10">
                        <div class="form-line">
                            <input type="text" class="form-control" id="txtContNo" name="txtContNo"  value="@item.No" disabled="disabled">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="txtVendNo" class="col-sm-2 control-label">Vendor RefNo:</label>
                    <div class="col-sm-10">
                        <div class="form-line">
                            @*HELPER - split from last array of strings before space*@
                            <input type="text" class="form-control" id="txtVendNo" name="txtVendNo" value="@Session["userNo"]" disabled="disabled">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="txtPhoneNo" class="col-sm-2 control-label">Phone Number:</label>
                    <div class="col-sm-10">
                        <div class="form-line">
                            @*HELPER - split from last array of strings before space*@
                            <input type="text" class="form-control" id="txtPhoneNo" name="txtPhoneNo" value="@item.Phone_No" disabled="disabled">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="Email" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                        <div class="form-line">
                            <input type="email" class="form-control" id="Email" name="Email" placeholder="Email" value="@item.E_Mail" required>
                        </div>
                    </div>
                </div>
                @if (item.Director_1_Name == "")
                {
                    <div class="profile-info-row">
                        <div class="profile-info-name"> Add Director </div>

                        <div class="profile-info-value">
                            <div class="alert alert-danger">
                                <div class="row">
                                    <h3>
                                        <strong>Kindly add atleast one director</strong>
                                    </h3>
                                    <span class="btn btn-primary pull-left btn-sm">
                                        <i class="fas fa-plus"></i>&nbsp; <a href="/Home/AddDirector" style="background: none; border: 0">Add Director</a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="profile-info-row">
                        <div class="profile-info-name"> Director's Full name </div>

                        <div class="profile-info-value">
                            <i class="fas fa-user-circle light-orange bigger-110"></i>
                            <span>@item.Director_1_Name</span>
                            <span class="btn btn-primary pull-right btn-sm">
                                <i class="fas fa-plus"></i>&nbsp; <a href="/Home/AddDirector" style="background: none; border: 0">Add Director</a>
                            </span>
                        </div>
                    </div>
                }
            </form>
        </div>
        <div role="tabpanel" class="tab-pane fade in" id="profile_settings">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="fname" class="col-sm-2 control-label">Name</label>
                    <div class="col-sm-10">
                        <div class="form-line">
                            <input type="text" class="form-control" id="fname" name="fname"  value="@item.Name" required>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="Email" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                        <div class="form-line">
                            <input type="email" class="form-control" id="Email" name="Email" placeholder="Email" value="@item.E_Mail" required>
                        </div>
                    </div>
                </div>
              
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="checkbox" id="terms_condition_check" class="chk-col-red filled-in"/>
                        <label for="terms_condition_check">I agree to the <a href="#">terms and conditions</a></label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-danger">SUBMIT</button>
                    </div>
                </div>
            </form>
        </div>
        <div role="tabpanel" class="tab-pane fade in" id="change_password_settings">
            <form class="form-horizontal">
                <div id="passwordfeedback"></div>
                <div class="form-group">
                    <label for="oldpassword" class="col-sm-3 control-label">Old Password</label>
                    <div class="col-sm-9">
                        <div class="form-line">
                            <input type="password" data-toggle="password" id="oldpassword" class="form-control" placeholder="Old Password" required>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="newpassword" class="col-sm-3 control-label">New Password</label>
                    <div class="col-sm-9">
                        <div class="form-line">
                            <input type="password" data-toggle="password" id="newpassword" class="form-control" maxlength="12" placeholder="New Password" required>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="confirmnewpassword" class="col-sm-3 control-label">New Password (Confirm)</label>
                    <div class="col-sm-9">
                        <div class="form-line">
                            <input type="password" data-toggle="password" id="confirmnewpassword" class="form-control" maxlength="12" placeholder="Confirm New Password"required>
                        </div>
                    </div>
                </div>
                @*<div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <button type="submit" class="btn btn-danger">SUBMIT</button>
                    </div>
                </div>*@
                <div class="lead">
                    <span class="btn btn-success pull-left btn-sm">
                        <i class="fa fa-save"></i>&nbsp; <button type="submit" id="btnResetPassword" style="background: none; border: 0">Reset Password</button>
                    </span>
                                
                    @if ((string) Session["logintype"] == "eprocurement")
                    {
                        <span class="btn btn-primary pull-right btn-sm">
                            <i class="fas fa-arrow-circle-left"></i>&nbsp; <a href="/Home/Index_EProc" style="background: none; border: 0">Back</a>
                        </span>
                    }
                    else if ((string) Session["logintype"] == "ebid")
                    {
                        <span class="btn btn-success pull-right btn-sm">
                            <i class="fa fa-arrow-circle-left"></i>&nbsp; <a href="/Home/Index_EBid"style="background: none; border: 0">Back</a>
                        </span>
                    }
                    else
                    {
                        <span class="btn btn-primary pull-right btn-sm">
                            <i class="fas fa-arrow-circle-left"></i>&nbsp; <a href="/Home/Index_EProc" style="background: none; border: 0">Back</a>
                        </span>
                    }

                </div>
        </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
}
}
</div>
