@{
    Layout = "~/Views/Shared/_Formwizard_Layout.cshtml";
}
<!-- BEGIN PAGE TITLE-->
<div class="page-content">
    <!-- BEGIN PAGE BAR -->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="/Home/TenderByRegion">e-Bidding</a>
                <i class="fa fa-circle"></i>
            </li>
            <li><span>Tenders By Regions</span></li>
        </ul>
        
    </div>
    <!-- END PAGE BAR -->

    <h3 class="page-title"><strong>Welcome to e-Bidding System</strong>
    </h3>
    <!-- END PAGE TITLE-->
    <input type="hidden" value="@Session["tenderclass"]" class="loaded_tender_type" />
    <p>
        Home e-Registration e-Prequalification e-Bidding Self Service Help desk
        The e-Bidding Portal enables the tenderers to view all Active Invitation For Supply (IFS) Notices, download the
        related tender documents and allow for online submission of their bid responses
    </p>
     
    <!---START: Tender sort by region-->
    <div class="portlet-body">
        <ul class="nav nav-tabs">
            <li class="active">
                <a href="#tab_1_1" data-toggle="tab"> Goods </a>
            </li>
            <li>
                <a href="#tab_1_2" data-toggle="tab"> Project Works</a>
            </li>

            <li>
                <a href="#tab_1_3" data-toggle="tab"> Consulting Services </a>
            </li>

            <li>
                <a href="#tab_1_4" data-toggle="tab">Non Consulting services </a>
            </li>

        </ul>

        <div class="tab-content">
            <div class="tab-pane fade active in" id="tab_1_1">
                <div class="actions table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <tr>
                            <td>
                                <div class="btn-group" id="region_sel_div" style="display: block">
                                    <a class="btn green btn-outline btn-circle" id="region_sel_btn" href="javascript:;">
                                        <span class="hidden-xs"> Search by Region </span>
                                        <i class="fas fa-search"></i>
                                    </a>
                                </div>
                                <div id="region_sel_div_2" style="display: none; width: 175px;">
                                    <select id = "regions_centers" class="form-control select2">
                                        <option value="">----</option>
                                    </select>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>

                <div class="col-md-12">
                    <!-- Begin: life time stats -->
                    <div class="portlet light portlet-fit portlet-datatable bordered">
                        <div class="portlet-body">
                            <!-- populate controls -->
                            <div class="scroll">
                                <div class="portlet-body">
                                    <div class="table-container" id="tender_by_region_div">
                                        <div id="ifpfeedbacks" style="display: none;"></div>
                                        <table class="table table-striped table-bordered table-hover" id="tbl_open_tenders_n">
                                            <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Notice No.</th>
                                                <th>Tender No.</th>
                                                <th>Tender Name</th>
                                                <th>Product Group</th>
                                                <th>Submision End Date</th>
                                                <th>Bid scoring Template ID</th>
                                            </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                    <div id="tndbyregion_details" style="display: none">
                                        <!-- populate controls -->
                                        <div class="scroll">
                                            @Html.Action("TenderOverviewInject", "Home")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End: life time stats -->
                </div>
            </div>

            <div class="tab-pane fade" id="tab_1_2">
                <div class="actions table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <tr>
                            <td>
                                <div class="btn-group region_sel_div" style="display: block">
                                    <a class="btn green btn-outline btn-circle region_sel_btn" href="javascript:;">
                                        <span class="hidden-xs"> Search by Region </span>
                                        <i class="fas fa-search"></i>
                                    </a>
                                </div>
                                <div class = "region_sel_div_2" style = "display: none; width: 175px;">
                                    <select class="form-control select2 regions_centers">
                                        <option value="">----</option>
                                    </select>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>

                <div class="col-md-12">
                    <div class="portlet light portlet-fit portlet-datatable bordered">
                        <div class="portlet-body">
                            <strong>Project Works</strong>
                            <p>
                                When you select a given Region ID, the search results will be for active tender notices that have been published by
                                the selected Region
                            </p>
                            <!-- populate controls -->

                            @*@Html.Action("PurchaseItemsInject", "Home")*@
                            
                            <div id="projectworks_byregion_list">
                                <table class="table table-striped table-bordered table-hover" id="tbl_tenders_works_byregion">
                                    <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Notice No.</th>
                                        <th>Tender No.</th>
                                        <th>Tender Name</th>
                                        <th>Product Group</th>
                                        <th>Submision End Date</th>
                                        <th>Bid scoring Template ID</th>
                                    </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>  
                            
                            <div id="tndbyregion_details_2" style="display: none">
                                <!-- populate controls -->
                                <div class="scroll">
                                    @Html.Action("TenderbyRegionOverviewInject", "Home")
                                </div>
                            </div>                     

                        </div>
                    </div>
                </div>

            </div>

            <div class="tab-pane fade" id="tab_1_3">
                <!-- populate controls -->
                <strong>Consulting Services</strong>
                <p>
                    Consultants can view the active tender invitation notices for provision of different consulting services, based
                    on the selected Region ID
                </p>
                <div class="scroll">
                    @*@Html.Action("TenderRequirementsInject", "Home")*@
                </div>
            </div>

            <div class="tab-pane fade" id="tab_1_4">
                <strong>Non Consulting Services</strong>
                <p>
                    Tenderers can view the active invitation notices for provision of different non-consulting services, based on the
                    selected Region ID.
                </p>
                <div class="scroll">
                    @*@Html.Action("ProjectWorksInject", "Home")*@
                </div>

            </div>
            
        </div>
        
    </div>
         
    <div class="form-actions">
        <div class="row">
            <div class="col-md-offset-5 col-md-8">
                <a href="javascript:;" class="btn green btn-outline btn-circle btn_back_2_tenderlist"><i class="fas fa fa-angle-left"></i> &nbsp;Back </a>
             </div>
        </div>
    </div>
    

    <div class="modalspinner" style="display: none">
        <div class="centerspinner">
            <img alt="" src="/assets/loaders/spinner.gif" />
        </div>
    </div>


</div>
   

